<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/title_red"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_bar_back_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/trans_button_selector"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/title_bar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/daily_account"
            android:textColor="@color/white"
            android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="5"
        />
        <ImageView
            android:id="@+id/title_bar_confirm_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_confirm"
            android:background="@drawable/trans_button_selector"
            android:padding="14dp"
            android:focusable="true"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>