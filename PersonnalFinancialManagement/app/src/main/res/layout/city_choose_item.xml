<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/location_icon"
            android:id="@+id/imageView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州"
            android:textColor="#191919"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:id="@+id/city_choose_item_district" />
        <TextView
            android:id="@+id/city_choose_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省-广州市"
            android:textColor="#acacac"
            android:textSize="12sp"
            android:layout_below="@+id/city_choose_item_district"
            android:layout_alignLeft="@+id/city_choose_item_district"
            android:layout_alignStart="@+id/city_choose_item_district" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E5E2"
        />
</LinearLayout>