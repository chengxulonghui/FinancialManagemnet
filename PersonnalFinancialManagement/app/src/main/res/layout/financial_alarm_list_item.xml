<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/financial_alarm_list_item_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="06-23"
                android:textColor="@color/font_gray"
                android:textSize="14sp" />

            <TableRow
                android:id="@+id/financial_alarm_list_item_content_tr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/white_button_selector"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/financial_alarm_list_item_line_v"
                        android:layout_width="1px"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:background="@color/trans_gray"
                        android:visibility="visible" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/financial_alarm_list_item_dot_iv"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/icon_red_dot" />

                        <TextView
                            android:id="@+id/financial_alarm_list_item_category_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="餐饮 - 早餐"
                            android:textColor="@color/font_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/financial_alarm_list_item_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="5.00"
                            android:textColor="@color/title_red"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/trans_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="4dp"
                            android:text="现金(CNY)"
                            android:textColor="@color/font_gray"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_weight="5" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="4dp"
                        android:background="@color/trans_gray" />
                </LinearLayout>
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/financial_alarm_list_item_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/accounting_save_selector"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="立即记录"
                android:textColor="@color/title_red"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>