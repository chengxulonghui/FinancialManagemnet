<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        style="@style/home_title_image_bt_style"
        android:id="@+id/home_title_bar_user_info_iv"
        android:src="@drawable/home_user_info_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/home_title_bar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容标题"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/home_title_bar_user_info_iv"
        android:layout_centerHorizontal="true"
         />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_title_bar_page_rv"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@id/home_title_bar_title_tv"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/home_title_bar_right_iv"
        style="@style/home_title_image_bt_style"
        android:src="@drawable/home_menu_bt_selector"
        android:layout_alignTop="@+id/home_title_bar_title_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
</RelativeLayout>