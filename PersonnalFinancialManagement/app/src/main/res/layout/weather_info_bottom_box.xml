<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/weather_info_box_above_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weather_info_box_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weather_info_box_wind_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/aqi_main_best"
                android:gravity="center"
                android:text="威风"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/weather_info_box_temp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/weather_info_box_above_ll"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="29~21℃"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weather_info_box_weather_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/weather_info_box_above_ll"
            android:layout_alignStart="@+id/weather_info_box_above_ll"
            android:layout_below="@+id/weather_info_box_above_ll"
            android:layout_marginTop="8dp"
            android:text="晴天"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/weather_info_box_weather_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/weather_info_box_temp_tv"
            android:layout_alignRight="@+id/weather_info_box_temp_tv"
            android:layout_alignTop="@+id/weather_info_box_weather_tv"
            android:src="@drawable/ww0" />
    </RelativeLayout>
</LinearLayout>